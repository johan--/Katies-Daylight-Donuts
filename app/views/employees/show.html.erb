<% title "Employee" %>

<p>
  <strong>Firstname:</strong>
  <%=h @employee.firstname %>
</p>
<p>
  <strong>Lastname:</strong>
  <%=h @employee.lastname %>
</p>
<p>
  <strong>Positions:</strong>
  <%= @employee.positions.map(&:name).join(", ") %>
</p>

<p>
  <%= link_to "Edit", edit_employee_path(@employee) %> |
  <%= link_to icon("cross-circle-frame"), @employee, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", employees_path %>
</p>

<% content_for :sidebar do %>
  <strong><%= @employee.fullname %></strong>
  
  <p>
    <strong><%= icon "mobile-phone" %> Phone:</strong>
    <%=h @employee.phone %>
  </p>

  <p>
    <strong><%= icon "clock-frame" %> Lifetime Hours: <%=h @employee.lifetime_hours %> hours</strong>
    <br / >
    <strong><%= icon "clock-frame" %> Average Shift: <%=h @employee.average_hours %> hours</strong>
    <br / >
    <small>Lifetime Hours this employee has worked since <%= @employee.created_at.to_s(:short) %>.</small>
  </p>

  <p>
    <strong><%= icon "present" %> Birthday:</strong>
    <%=h @employee.dob %>
  </p>
<% end%>