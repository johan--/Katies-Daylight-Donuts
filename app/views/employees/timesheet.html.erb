<% title "#{@employee.fullname}'s Hours" %>

<div class="span-22">
<% weekly_calendar(@events, :date => @date, :include_24_hours => true) do |w| %>
  <% w.week(:business_hours => params[:business_hours]) do |event,truncate| %>
    <%= event.starts_at.strftime('%I:%M%p') %>
  <% end -%>
<% end -%>
</div>