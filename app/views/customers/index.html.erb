<% title "Customers" %>

<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <% for customer in @customers %>
    <tr>
      <td><%= link_to h(customer.name), customer_url(customer) %></td>
      <td><%= link_to(h(customer.website),customer.website, :target => "_blank") %></td>
      <td><%= link_to "Locations", customer_locations_path(customer) %></td>
      <td><%= link_to icon("eye",:alt => "Show", :title => "Show"), customer %></td>
      <td><%= link_to icon("pencil-small"), edit_customer_path(customer) %></td>
      <td><%= link_to icon("cross-circle-frame"), customer, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<% content_for :sidebar do %>
  <%= button "Add Customer", new_customer_path %>
<% end %>
