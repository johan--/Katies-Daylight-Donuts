<% title "Login" %>

<div>
<% form_for @user_session, :html => {:id => "login_form"} do |f| %>
  <% content_for :login_errors do %>
    <%= f.error_messages %>
  <% end %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, :class => "large", :style => "width: 250px;" %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => "large", :style => "width: 250px;" %>
  </p>
  <p>
    <%= image_submit_tag "../images/buttons/default/button-ok.png", :style => "vertical-align: middle" %>
    <br />Need help logging in? <strong><%= link_to "Forgot Password", password_resets_url %></strong>
  </p>
<% end %>


<%#= authlogic_facebook_login_button(:controller => "user_sessions") %>

<% if @content_for_login_errors %>
  <center><%= yield :login_errors %></center>
<% end %>
</div>