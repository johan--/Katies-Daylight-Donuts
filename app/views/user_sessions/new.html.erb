<% title "Login" %>

<% form_for @user_session, :html => {:id => "login_form"} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Submit" %> 
    <%= link_to "Forgot Password", password_resets_url %>
  </p>
<% end %>
