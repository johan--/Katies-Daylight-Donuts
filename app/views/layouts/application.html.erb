<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application','facebox' %>
    <%= yield(:head) %>
    <%= javascript_include_tag :defaults %>
    <%#= javascript_include_tag "jquery" %>
    <%#= javascript_include_tag "livepipe-ui/src/livepipe.js" %>
    <%= iboxify_page %>
    <%= javascript_include_tag "facebox" %>
    <%= calendar_date_select_includes "silver" %>
    <% if @current_user %>
    <style type="text/css" media="screen">
      /* Hide Tooltips based on user setting */
      <% unless @current_user.show_tips? %>
        div.tip{
          display: none;
        }
      <% end %>
    </style>
    <% end %>
    <script type="text/javascript" charset="utf-8">
      document.observe("dom:loaded", function() {
        facebox.settings.opacity = 0.5;
      });
    </script>
  </head>
  <body>
    <div class="container">
      <div class="span-24">
        <div class="span-8">
          <%= link_to(image_tag("logo.png", :id => "logo"), "/") %>
        </div>
        <div class="span-14 top_nav">
          <!-- Top Navigation -->
          <%= render :partial => "shared/top_nav" %>
        </div>
      </div>
      <!-- Main Navigation -->
      <%= render :partial => "shared/navigation" %>
      <div class="span-24 backdrop">
        <div class="span-24 header">
          <div class="span-16">
          <%- if show_title? -%>
            <h1><%= yield(:title) %></h1>
          <%- end -%>
          </div>
          &nbsp;
          <% if @content_for_toolbar %>
          <div class="span-6 toolbar">
            <!-- Toolbar -->
            <%= yield :toolbar %>
          </div>
          <% end %>
        </div>
        
        <div class="span-24">
          <!-- Messages -->
          <%- flash.each do |name, msg| -%>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <%- end -%>
        </div>
        
        <div id="inner" class="<%= @content_for_sidebar.nil? ? "span-24" : "span-14" %>">
          <%= yield %>
        </div>
        
        <% if @content_for_sidebar %>
          <div id="sidebar" class="span-8">
            <!-- Sidebar -->
            <%= render :partial => 'shared/sidebar' if @content_for_sidebar %>
          </div>
        <% end %>
        
      </div>
    </div>
    <div id="loader" rel="facebox" style="display: none;">
      <center>
        <%= image_tag "loading.gif" %><br />
        <strong>Loading...</strong>
      </center>
    </div>
  </body>
</html>
