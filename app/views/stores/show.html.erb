<% title h(@store.display_name) %>
<p>
  <strong>Store No:</strong>
  <%=h @store.store_no %>
</p>
<p>
  <strong>Address:</strong>
  <%=h @store.address %>
</p>
<p>
  <strong>City:</strong>
  <%=h @store.city %>
</p>
<p>
  <strong>State:</strong>
  <%=h @store.state %>
</p>
<p>
  <strong>Country:</strong>
  <%=h @store.country %>
</p>
<p>
  <strong>Zipcode:</strong>
  <%=h @store.zipcode %>
</p>
<p>
  <strong>Phone:</strong>
  <%=h @store.phone %>
</p>
<p>
  <strong>Fax:</strong>
  <%=h @store.fax %>
</p>
<p>
  <strong>Email:</strong>
  <%=h @store.email %>
</p>
<p>
  <strong>Url:</strong>
  <%=h @store.url %>
</p>

<table>
  <tr>
    <th colspan="7">Default Delivery Schedule</th>
  </tr>
  <tr>
    <% %w(sun mon tue wed thu fri sat).each do |day| %>
      <th><%= day.upcase %></th>
    <% end %>
  </tr>
  <tr>
    <% @store.delivery_presets.sort_by{|dp| dp.day_of_week }.each do |dp| %>
      <td>
        <ul>
        <% dp.line_items.each do |line_item| %>
          <li><small><%= line_item.quantity %> <%= line_item.item.name %></small></li>
        <% end %>
          <li><%= link_to "Edit", edit_store_delivery_preset_path(@store,dp) %></li>
        </ul>
      </td>
    <% end %>
  </tr>
</table>

<p>
  <%= link_to "Edit", edit_store_path(@store) %> |
  <%= link_to "Destroy", @store, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", stores_path %>
</p>
