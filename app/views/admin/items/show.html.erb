<% title "Item" %>

<p>
  <strong>Name:</strong>
  <%=h @item.name %>
</p>
<p>
  <strong>Item Type:</strong>
  <%=h @item.item_type %>
</p>
<p>
  <strong>Price:</strong>
  <%= number_to_currency @item.price %>
</p>
<p>
  <strong>Available:</strong>
  <%=h @item.available %>
</p>

<p>
  <%= link_to "Edit", edit_admin_item_path(@item) %> |
  <%= link_to icon("cross-circle-frame"), [:admin, @item], :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", admin_items_path %>
</p>
