<% content_for :head do %>
  <%= stylesheet_link_tag 'weekly' %>
<% end %>

<% title "#{@employee.fullname}'s Hours" %>

<div class="span-22">
<% weekly_calendar(@events, :date => @date, :include_24_hours => true) do |w| %>
  <% w.week(:business_hours => params[:business_hours]) do |event,truncate| %>
    <%= link_to event.starts_at.strftime('%I:%M%p'), clockin_time_path(event) %><br />
    <%= link_to event.employee.fullname, employee_path(event.employee) %>
  <% end -%>
<% end -%>
</div>