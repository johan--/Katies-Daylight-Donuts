<h1>Comment for Delivery #<%= @delivery.id %></h1>
<% form_remote_for @comment, :success => %(facebox.close()) do |f| %>
  <%= f.text_area :body, :rows => 4, :cols => 40 %>
  <br />
  <%= f.hidden_field :commentable_id %>
  <%= f.hidden_field :commentable_type, :value => "Delivery" %>
  <%= image_submit_tag "buttons/default/button-save.png" %> <%= link_to_function image_tag("buttons/default/button-cancel.png"), %(facebox.close()) %>
<% end %>