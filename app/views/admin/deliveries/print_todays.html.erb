<style type="text/css" media="print,screen">
  body {
	  background: white;
	  font-size: 12pt;
	  font-family: Helvetica;
	}
	div.ticket{
	  width: 8.5in;
	  height: 9in;
	}
	
	table{
	  margin: 0;
	  width: 8.5in;
	  border-collapse: collapse;
	  border: 1px solid black;
	}
  table tr td, table tr th{ vertical-align: top; border: 1px solid black; padding: 0.2em;}
  table{ border: 1px solid black; }
  table tr th.heading,table tr.heading{background: #8A8A8A; text-align: center; vertical-align: center;}
</style>

<style type="text/css" media="print">
  .hidden{
    display: none;
  }
</style>

<% @deliveries.each do |delivery| %>
  <%= render :partial => "ticket", :locals => {:delivery => delivery } %>
<% end %>

<script type="text/javascript" charset="utf-8">
  window.print();
</script>