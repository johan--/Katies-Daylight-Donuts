- form_for [:admin, @sms_message], :url => {:controller => "admin/sms", :action => "create"} do |f|
  %p
    = f.label :user_id
    %br
    = f.collection_select :user_id, User.all, :id, :username
    
  %p
    = f.label :body
    %br
    = f.text_area :body, :rows => 4, :cols => 30
    
  = f.submit :save
  
- content_for :sidebar do
  %ul.sidebar
    %li.header SMS Tools
    %li=link_to "Show all SMS Messages", admin_sms_path
    