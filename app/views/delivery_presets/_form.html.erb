<% form_for @delivery_preset do |f| %>
  <%= f.error_messages %>
  <h1><%= @delivery_preset.day_of_week.titleize %></h1>
  <p>
    <strong><%= @delivery_preset.store.display_name %></strong>
  </p>  
  <table id="line_items">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    <%= render :partial => "delivery_presets/line_item", :collection => @delivery_preset.line_items %>
    <% (Item.available - @delivery_preset.items).each do |item| %>
      <%= render :partial => "delivery_presets/line_item", :object => @delivery_preset.line_items.build(:item => item) %>
    <% end %>
  </table>
  
  <p><%= f.submit "Save" %></p>
<% end %>
