<% form_for @delivery_preset do |f| %>
  <%= f.error_messages %>
  <p>
    <strong><%= link_to h(@delivery_preset.store.display_name), @delivery_preset.store %></strong>
  </p>
  <p><%= icon("calendar", :style => "vertical-align: bottom;") %><strong><%= @delivery_preset.day_of_week.titleize %></strong></p>
  <table id="line_items">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    <%= render :partial => "delivery_presets/line_item", :collection => @delivery_preset.line_items %>
    <% (Item.available - @delivery_preset.items).each do |item| %>
      <%= render :partial => "delivery_presets/line_item", :object => @delivery_preset.line_items.build(:item => item) %>
    <% end %>
  </table>
  
  <p><%= f.submit "Save" %> <%= link_to "Cancel", @delivery_preset.store %></p>
<% end %>

<% content_for :sidebar do %>
<p>Select a day of the week to copy from.</p>
  <% form_tag :action => "copy", :controller => "delivery_presets" do %>
    <%= select_tag :id, @delivery_preset.store.delivery_presets.collect{|dp| "<option value='#{dp.id}'>#{dp.day_of_week.titleize}</option>" if dp != @delivery_preset }.compact %> 
    <%= hidden_field_tag :copy_from_id, @delivery_preset.id %>
    <%= image_submit_tag "buttons/default/button-copy.png" %>
  <% end %>
<% end %>