<% title "Reset your password" %>

<% form_for @user, :url => password_reset_url do |f| %>
<fieldset>
  <legend>
    Enter your new password. You will be logged in to your account where you can make additional changes.
  </legend>
<table>
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>
</fieldset>
<%= submit_tag "Update Password" %>
<% end %>