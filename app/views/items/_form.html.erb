<% form_for @item do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= text_field_with_auto_complete :item, :name, {}, {:method => :get} %>
  </p>
  <p>
    <%= f.label :item_type %><br />
    <%= f.select :item_type, Item.types %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :number_per_screen %><br />
    <%= f.text_field :number_per_screen, :size => 5 %>
  </p>
  <p>
    <%= f.label :weight %><br />
    <%= icon("balance") %><%= f.text_field :weight, :size => 5 %>
  </p>
  <p>
    <%= f.check_box :available %> <%= f.label :available %>
  </p>
  <p><%= f.submit "Save" %></p>
<% end %>
